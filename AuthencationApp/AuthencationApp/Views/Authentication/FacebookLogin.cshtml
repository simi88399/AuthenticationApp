
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;
@{
    ViewData["Title"] = "FacebookLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="justify-content-center">
            <form asp-action="FacebookLogin" asp-controller="Account">
                <h4 class="text-center margin-top">Login With Facebook Account</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="text" hidden="hidden" name="returnUrl" value="/Authentication/FacebookResponse" class="currenctURL1" id="currentURL1" />
                <input type="submit" value="Login With Facebook" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>
